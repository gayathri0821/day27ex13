package march27;

import java.util.Scanner;

public class Ex13
{
    public static void main(String[] args) 
    {
        Scanner sc = new Scanner(System.in);
         
        System.out.println("enter number of rows you want to enter to create pattern");
         
        int rows = sc.nextInt();
         
        for (int i = 1; i<= rows; i++) 
        {
            for (int j = 1; j <= i; j++)
            {
                System.out.print(j+" ");
            }
             
            System.out.println();
        }
         
        
         
        
    }
}
